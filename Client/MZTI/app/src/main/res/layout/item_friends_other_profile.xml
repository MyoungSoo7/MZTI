<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_otherProfileItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_otherProfileItem_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_otherProfileItem_nickname"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <TextView
        android:id="@+id/tv_otherProfileItem_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="신짱구"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_otherProfileItem_img"
        app:layout_constraintLeft_toRightOf="@id/iv_otherProfileItem_img"
        app:layout_constraintRight_toLeftOf="@id/tv_otherProfileItem_mbti"
        app:layout_constraintTop_toTopOf="@id/iv_otherProfileItem_img" />


    <TextView
        android:id="@+id/tv_otherProfileItem_mbti"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_friends_mbti"
        android:fontFamily="@font/righteous_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="ENFJ"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_otherProfileItem_img"
        app:layout_constraintLeft_toRightOf="@id/tv_otherProfileItem_nickname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_otherProfileItem_img" />

</androidx.constraintlayout.widget.ConstraintLayout>