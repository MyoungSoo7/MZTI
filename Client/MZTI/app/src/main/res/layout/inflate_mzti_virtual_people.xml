<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_virtualPeople"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/background_mzti_card_blue">

    <ImageView
        android:id="@+id/iv_virtualPeople"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_virtual_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_virtualPeople_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="left"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="신짱구"
        android:textColor="@color/text_black"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@id/tv_virtualPeople_product"
        app:layout_constraintLeft_toRightOf="@id/iv_virtualPeople"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_virtualPeople"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_virtualPeople_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="left"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="신짱구"
        android:textColor="@color/text_black"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_virtualPeople"
        app:layout_constraintLeft_toRightOf="@id/iv_virtualPeople"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_virtualPeople_name" />


</androidx.constraintlayout.widget.ConstraintLayout>